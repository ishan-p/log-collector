{
    "watchers": [
        {
            "watch": "/var/log/nginx.log",
            "tags": [
                {
                    "key": "Type",
                    "value": "Nginx"
                }
            ],
            "destination": "filesystem"
        }
    ],
    "server": {
        "host": "127.0.0.1",
        "port": 8000
    },
    "retry": {
        "max_retries": 5
    }
}